run = "sh main.sh"
onBoot = "export PREFIX=\"$HOME/OS-for-x86/opt/cross\" && export TARGET=i686-elf && export PATH=\"$PREFIX/bin:$PATH\""
hidden = ["main.sh", "main.bin"]

[nix]
channel = "stable-21_11"

[languages]

[languages.c]
pattern = "**/*.{c,h}"

[languages.c.languageServer]
start = "ccls"

[languages.cpp]
pattern = "**/*.{cpp,hpp}"

[languages.cpp.languageServer]
start = "ccls"
